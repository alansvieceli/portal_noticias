<!DOCTYPE html>
	<html lang="pt-br">
		<head>
			<meta charset="utf-8"/>
			<title>Notícias</title>
		</head>
	<body>

    <h1>Notícias</h1>
    
    <table>
      <tr>
        <td>id</td>
        <td>Título</td>
        <td>Notícia</td>        
        <td>Resumo</td>        
      </tr>
      <% for(let i=0; i < noticias.length; i++) {  %>
      <tr>
        <td><%= noticias[i].id %></td>
        <td><%= noticias[i].titulo %></td>
        <td><%= noticias[i].noticia %></td>        
        <td><%= noticias[i].resumo %></td>     
      </tr>
      <% } %>
    </table>

	</body>
</html>